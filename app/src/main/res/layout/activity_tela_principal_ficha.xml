<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaPrincipalFicha" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/listTreino" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtNomeTreino"
        android:layout_alignLeft="@+id/textView1"
        android:text="@string/novoTreino" />

    <Button
        android:id="@+id/btnAddTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/add" />

    <EditText
        android:id="@+id/txtNomeTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAddTreino"
        android:layout_alignLeft="@+id/textView2"
        android:layout_toLeftOf="@+id/btnAddTreino" >

        <requestFocus />
    </EditText>

    <View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:background="#A8A8A8" />

    <ListView
        android:id="@+id/listTreinos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Divisor1"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginBottom="5dp" >

    </ListView>

</RelativeLayout>
