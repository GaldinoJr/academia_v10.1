<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TelaFichaListExercicios" >

    <TextView
        android:id="@+id/lblNmTreino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nmTreino" 
        android:layout_alignBottom="@+id/btnAddExercicio"/>
    
    <Button
        android:id="@+id/btnAddExercicio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/Divisor1"
        android:background="@drawable/ic_add"
        android:text="@string/add" />

	<View
        android:id="@+id/Divisor1"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/lblNmTreino"
        android:layout_marginTop="10dp"
        android:background="#A8A8A8" />

	
	
</RelativeLayout>
